{
  "manifest_version": 3,
  "name": "FBMbOT",
  "version": "0.1",
  "permissions": ["activeTab","tabs", "scripting", "storage", "declarativeContent"],
  "host_permissions": ["https://www.facebook.com/*","https://portal.rbnapply.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
